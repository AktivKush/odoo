    <record id="school_tree_view" model="ir.ui.view">
        <field name="name">school.tree.view</field>
        <field name="model">school.profile</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="is_virtual_class"/>
                <field name="school_rank"/>
                <field name="result"/>
                <field name="address"/> 
                <field name="estalish_date"/>
                <field name="open_date"/>
                <field name="school_type"/>
                <field name="documents"/>
                <field name="school_description"/>
                <field name="student_id"/>
                <field name="student_list"/>
                <field name="hobby_list"/>
                <field name="techer_ids"/>
            </tree>
        </field>   
    </record>

    <record id="school_form_view" model="ir.ui.view">
        <field name="name">school.form.view</field>
        <field name="model">school.profile</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field name="name" default_focus="1" placeholder="Enter SchoolName"/>
                    </h1>
                    <hr></hr>
                    <group>
                        <group>
                            <!-- <h1>
                                <field name="name" default_focus="1" placeholder="Enter SchoolName"/>
                            </h1> -->
                            <field name="email" widget="email"/>
                            <field name="phone" widget="phone"/>
                            <field name="is_virtual_class"/>
                            <field name="school_rank"/>
                            <field name="result"/>  
                            <field name="address" readonly="0"/> 
                            <field name="student_id"/>
                        </group> 
                        <group>     
                            <field name="estalish_date"/>
                            <field name="open_date"/>
                            <field name="school_type" widget="radio" class="oe_edit_only" options="{'horizontal': true}"/>
                            <field name="location" placeholder="location"/>    
                        </group>    
                    </group>
                    <group>
                        <field name="documents"/>
                        <field name="student_list"/>
                        <field name="hobby_list"/>
                        <field name="techer_ids"/>
                        <field name="school_image" widget="image"/>
                        <field name="school_description"/>
                    </group>
                    <notebook>
                        <page string="School Note">
                            <group>
                                <separator string="School Note"/>
                                <field name="schoolnote"/>
                                <field name="appoinment_list">
                                    <tree editable="bottom">
                                        <field name="student_id"/>
                                        <field name="total_parent"/>
                                        <field name="school_id"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Teacher Note">
                            <group>
                                <separator string="Teacher Note"/>     
                                    <field name="teachernote"/>   
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>   
    </record>

