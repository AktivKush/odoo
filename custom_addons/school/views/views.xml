    <record id="school_profile_search" model="ir.ui.view">       
        <field name="name">school.profile.search</field>       
        <field name="model">school.profile</field>       
        <field name="arch" type="xml">           
            <search string="Search School">
                <field name="name"/>
                <field name="school_type"/>
                <field name="school_rank"/>
                <filter string="Public School" name="Public" domain="[('school_type','=','Public')]"/>
                <filter string="Private School" name="private" domain="[('school_type','=','private')]"/>
                <group expand="0" string="Group By">  
                    <filter string="Email" name="email" context="{'group_by': 'email'}"/>                                            
                    <filter string="Phone" name="phone" context="{'group_by': 'phone'}"/>                                           
                    <filter string="Location" name="location" context="{'group_by': 'location'}"/>            
                </group>                                    
            </search>     
        </field>
    </record>

    <record id="school_profile_kanban" model="ir.ui.view">
        <field name="name">school.profile.kanban</field>
        <field name="model">school.profile</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="school_type"/>
                <field name="school_image"/>
                <field name="id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_school_profile_kanban">
                            <t t-if="record.school_image.raw_value">
                                <div class="o_kanban_image_fill_left d-none d-md-block" t-attf-style="background-image:url('#{kanban_image('school.profile','school_image',record.id.raw_value)}')"/>
                            </t>
                            <t t-else="">
                                <img class="o_kanban_image" alt="School" t-att-src="'/base/static/img/default-school-logo.png'"/>
                            </t>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                                <ul>
                                    <li>Email: <field name="email"/></li>
                                    <li>Phone: <field name="phone"/></li>
                                </ul>
                            </div>
                        </div>             
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_school_profile" model="ir.actions.act_window">
        <field name="name">School Profile</field>
        <field name="res_model">school.profile</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>
    
    <menuitem id="school_root_menu" name="school"/>
    <menuitem id="school_sub_menu" parent="school_root_menu" action="action_school_profile"/>

</odoo>